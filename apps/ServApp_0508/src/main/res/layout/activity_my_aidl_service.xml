<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.frank.servapp_0508.MyAidlServiceActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="bind"
        android:id="@+id/button_bind"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UNBIND"
        android:id="@+id/button_unbind"
        android:layout_below="@+id/button_bind"
        android:layout_alignParentStart="true" />

    <ProgressBar
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar_val1"
        android:layout_below="@+id/button_unbind"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:max="100"
        android:progress="30"
        android:indeterminate="false" />

    <ProgressBar
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar_val2"
        android:layout_below="@+id/progressBar_val1"
        android:layout_alignParentStart="true"
        android:max="100"
        android:progress="40"
        android:indeterminate="false" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_setValue"
        android:layout_below="@+id/progressBar_val2"
        android:layout_alignParentStart="true"
        android:text="set" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText_val1"
        android:layout_below="@+id/button_setValue"
        android:layout_alignParentStart="true"
        android:text="0" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText_val2"
        android:layout_below="@+id/editText_val1"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/editText_val1"
        android:text="0" />
</RelativeLayout>
